{
    "name":        "hostnet/bank-holiday-component",
    "description": "Component that provides bank holidays and business day dates",
    "license":     "MIT",
    "require": {
        "php": "^7.3||^8.0"
    },
    "require-dev": {
        "hostnet/phpcs-tool": "^9.1.0",
        "phpunit/phpunit":    "^9.5.6"
    },
    "autoload": {
        "psr-4": {
            "Hostnet\\Component\\BankHoliday\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Component\\BankHoliday\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "hostnet/*":                                      true,
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
